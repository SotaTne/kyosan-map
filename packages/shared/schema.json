{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "大学施設情報スキーマ定義",
  "type": "object",

  "properties": {
    "$schema": {
      "type": "string",
      "description": "スキーマ参照（メタデータ用）"
    },
    "version": {
      "type": "string",
      "description": "データスキーマまたはデータセットのバージョン",
      "default": "1.0.0"
    },
    "data": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "施設ID (ユニーク)"
          },
          "name": {
            "type": "string",
            "description": "施設名"
          },
          "ocrName": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "default": [],
            "description": "OCR検出用施設名 これがないとOCR検出されない regexpとして扱われます"
          },
          "description": {
            "type": "string",
            "description": "施設説明",
            "default": ""
          },
          "type": {
            "type": "string",
            "enum": ["building", "tips", "shop", "food"],
            "description": "種類"
          },
          "tags": {
            "type": "array",
            "description": "施設タグ",
            "items": {
              "type": "string"
            },
            "default": []
          },
          "image": {
            "type": "string",
            "description": "施設画像URL",
            "default": ""
          },
          "lat": {
            "type": "number",
            "description": "緯度 (WGS84)",
            "minimum": -90,
            "maximum": 90
          },
          "lng": {
            "type": "number",
            "description": "経度 (WGS84)",
            "minimum": -180,
            "maximum": 180
          },
          "contentsId": {
            "type": "string",
            "description": "詳細情報コンテンツID",
            "default": ""
          }
        },
        "required": ["id", "name", "type", "lat", "lng"],
        "additionalProperties": false
      }
    },
    "contents":{
      "type": "array",
      "items":{
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "コンテンツID (ユニーク)"
          },
          "kind": {
            "type": "string",
            "enum": ["image", "model", "audio"],
            "description": "コンテンツ種類"
          },
          "name": {
            "type": "string",
            "description": "コンテンツ名"
          },
          "filename":{
            "type": "string",
            "description": "コンテンツファイル名 これがほぼURL"
          }
        },
        "required": ["id", "kind", "name", "filename"],
        "additionalProperties": false
      }
    }
  },

  "required": ["data"],
  "additionalProperties": false
}
