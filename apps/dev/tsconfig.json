{
  "extends": "@kyosan-map/typescript-config/nextjs.json",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "allowArbitraryExtensions": true,
    "paths": {
      "@/*": ["./src/*"],
      "@kyosan-map/ui/*": ["../../packages/ui/src/*"],
      "@kyosan-map/db/*": ["../../packages/db/src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "next.config.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
